<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_email_login"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        tools:visibility="visible">


        <EditText
            android:id="@+id/text_email_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:minEms="7"
            style="@style/TEXTBODY16"

            android:paddingHorizontal="30dp"
            android:hint="Email"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_password_login"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        style="TEXTBODY16"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/layout_text_email_login"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        tools:visibility="visible">


        <EditText
            android:id="@+id/text_password_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minEms="7"
            style="@style/TEXTBODY16"
            android:paddingHorizontal="30dp"
            android:hint="@string/password"
            android:drawablePadding="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text_password_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="133dp"
        android:clickable="true"
        style="@style/TEXTBODY16"
android:textColor="@color/white"
        android:onClick="login"
        android:paddingHorizontal="40dp"
        android:text="Login"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/txt_signup"
        style="@style/TEXTBODY16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="48dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:onClick="signUpClick"
        android:text="Do not have an account with us?"
        android:textColor="@color/accent" />
    <TextView
        android:id="@+id/txt_forgotPassword"
        style="@style/TEXTBODY16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="forgotPassword"
        android:layout_marginStart="8dp"
        android:text="Forgot Password?"
        android:textColor="@color/accent" />


</RelativeLayout>