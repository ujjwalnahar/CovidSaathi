<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="240dp"
    app:cardCornerRadius="10dp"
    style="@style/CardViewBackground">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_resource_thumbnail"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_item_resource"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/darkPeach"
            app:cardCornerRadius="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Name"
                android:textAlignment="center"

                android:singleLine="true"
                style="@style/TEXTBODY16"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_item_resource"
                    android:layout_below="@+id/txt_doc_name"
                    android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardElevation="10dp"
                    android:id="@+id/cardview_image_item_resource"
                    app:cardCornerRadius="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    >
                <ImageView
                    android:id="@+id/img_item_type_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:elevation="20dp"
                    android:src="@drawable/processor"
                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_resource_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="27/02/2021"
                        style="@style/TEXTBODY16"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/txt_resource_contributor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contributed By: Someone"
                        android:lineSpacingExtra="-2dp"
                        style="@style/TEXTBODY16"
                        android:textSize="12sp"
                        android:textAlignment="center"/>


                </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>
