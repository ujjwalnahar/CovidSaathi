<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="240dp"
    app:cardCornerRadius="10dp"
    style="@style/CardViewBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="70dp"
            android:layout_height="35dp"
            app:cardCornerRadius="35dp"
            android:backgroundTint="@color/transparent"
            android:layout_above="@+id/cardview_item_resource"
            android:layout_marginStart="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"

                android:src="@drawable/ic_like"
                app:tint="@color/accent"/>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="70dp"
            android:layout_height="35dp"
            app:cardCornerRadius="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/transparent"
            android:layout_above="@+id/cardview_item_resource"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
app:tint="@color/accent"
                android:src="@drawable/ic_dislike_thumb"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_item_resource"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/darkPeach"
            app:cardCornerRadius="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Name"
                android:textAlignment="center"
                style="@style/TEXTBODY16"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_item_resource"
                    android:layout_below="@+id/txt_doc_name"
                    android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardElevation="10dp"
                    android:id="@+id/cardview_image_item_resource"
                    app:cardCornerRadius="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    >
                <ImageView
                    android:id="@+id/img_item_resource"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:elevation="20dp"
                    android:src="@drawable/processor"
                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="27/02/2021"
                        style="@style/TEXTBODY16"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contributed By: Someone"
                        android:lineSpacingExtra="-2dp"
                        style="@style/TEXTBODY16"
                        android:textSize="12sp"
                        android:textAlignment="center"/>


                </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>
