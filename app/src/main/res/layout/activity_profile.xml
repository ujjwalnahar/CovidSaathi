<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LightPane"
    tools:context=".activities.ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Profile"
        android:titleMarginStart="-40dp"
        android:titleTextColor="@color/accent"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24"
style="@style/LightPane"        />
    <RelativeLayout
        android:id="@+id/layout_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_profile"
        android:layout_marginTop="16dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
app:cardElevation="10dp"
            android:id="@+id/view2"
            app:cardCornerRadius="60dp"
            android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/img_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="20dp"
            android:src="@drawable/ic_baseline_person_24"
            />
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="48dp"
        style="@style/CardViewBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ujjwal nahar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txt_rollNo_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0201CS181087"
                android:layout_below="@+id/txt_name_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16dp"/>
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txt_rollNo_profile"
                android:background="@color/accent"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="32dp"/>
            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_branch"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE"
/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3rd"
                        />
                </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_semester"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5th"
                    />
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.O.B"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_dob"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginEnd="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="xx.xx.xxxx"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_dob"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_email"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginEnd="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="ujjwal.nahar121@gmailc.om"
                    />
            </LinearLayout>
            <LinearLayout android:id="@+id/layout_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_college"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="JEC Jabalpur"
                />
        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_your_contribution"
        android:layout_below="@+id/layout_info_card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Contributions"
        android:textSize="18dp"
        android:textColor="@color/accent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_weight="1"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_your_contribution"
        android:layout_below="@+id/txt_your_contribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="8dp"
        style="@style/CardViewBackground"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_your_contribution"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:reverseLayout="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:text="View more>>"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_society_subscribed"
        android:layout_below="@+id/cardview_your_contribution"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Societies Subscribed"
        android:textSize="18dp"
        android:textColor="@color/accent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_weight="1"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_socieities_subscribed"
        android:layout_below="@+id/txt_society_subscribed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/CardViewBackground"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_socieities_subscribed"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            />

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>