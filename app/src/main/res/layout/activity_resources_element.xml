<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResourcesElementActivity">
    <ImageView
        android:id="@+id/home_background_imageView"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent"/>
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Resources"
        android:background="@color/transparent"
        style="@style/toolbarStyle"
        app:titleMarginStart="10dp"
        app:navigationIcon="@drawable/backward_arrow"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_txt_type"
        android:layout_below="@+id/toolbar_resources"
        ><com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Type"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="60dp"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp">
            <Spinner
                android:id="@+id/spinner_resources_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/types"
                android:layout_gravity="center"

                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_resources_element"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/layout_txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        android:backgroundTint="@color/accent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:borderWidth="0dp"
        />
</RelativeLayout>