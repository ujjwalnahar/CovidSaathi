<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LightPane"
    tools:context=".activities.SignupActivity">
    <ImageView
        android:id="@+id/home_background_imageView"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>


    <FrameLayout
        android:id="@+id/img_Profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/layout_text_email"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_outline_24"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_camera_alt_24"

            android:tint="@color/accent"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"

            />
    </FrameLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_email"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        tools:visibility="visible">


        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="Email"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        style="TEXTBODY16"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/layout_text_email"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        tools:visibility="visible">


        <EditText
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="@string/password"
            android:drawablePadding="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        style="TEXTBODY16"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/layout_text_password"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        tools:visibility="visible">


        <EditText
            android:id="@+id/text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="Confirm Password"
            android:drawablePadding="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_name"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        android:visibility="gone"
        >


        <EditText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_phone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        style="TEXTBODY16"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/layout_text_email"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"

        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        android:visibility="gone"
        >


        <EditText
            android:id="@+id/text_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="Phone"
            android:drawablePadding="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_roll_no"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        style="TEXTBODY16"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/layout_text_password"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        android:visibility="gone"
        >


        <EditText
            android:id="@+id/text_roll_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minEms="7"
            android:paddingHorizontal="30dp"
            android:hint="Roll No"
            android:drawablePadding="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dayNightFAB"
        style="@style/DayNightFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="visible"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/accent"
        app:fabSize="mini"
        app:layout_anchor="@+id/nested_home_scrollView"
        app:tint="@color/white" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text_confirm_password"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:layout_marginHorizontal="64dp"
        app:cornerRadius="20dp"
        android:text="@string/sign_up"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_semester"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textColor="@color/primarygrey"
        android:textSize="17sp"
        app:backgroundTint="@color/primarygrey"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/layout_text_confirm_password"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        android:visibility="gone">        <Spinner
            android:id="@+id/spinner_semester"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:defaultFocusHighlightEnabled="true"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_branch"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textColor="@color/primarygrey"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/layout_text_semester"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
        android:visibility="gone"
>
        <Spinner
            android:id="@+id/spinner_branch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:defaultFocusHighlightEnabled="true"
            />


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDay"
        style="@style/DayNightFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:onClick="DayNightMode"
        android:visibility="visible"
        app:backgroundTint="@color/accent"
        app:fabSize="mini"
        app:layout_anchor="@+id/nested_home_scrollView"
        app:layout_anchorGravity="center"
        app:tint="@color/white" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_text_college"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="15"
        android:paddingHorizontal="30dp"
        android:textSize="17sp"
        app:cornerRadius="25dp"
        app:iconGravity="end"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/layout_text_branch"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="3dp"
android:visibility="gone"
        >        <Spinner
            android:id="@+id/spinner_college"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:defaultFocusHighlightEnabled="true"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text_college"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:layout_marginHorizontal="64dp"
        app:cornerRadius="20dp"
        android:visibility="gone"
        android:text="Add Information"/>
</RelativeLayout>